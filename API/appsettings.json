{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=ChatSupport;Trusted_Connection=True;MultipleActiveResultSets=true"
  },

  "UseInMemoryMongo": true,
  "MongoSettings": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "ChatSupport"
  },

  "SupportChatOptions": {
    "PollIntervalSeconds": 1,
    "MaxMissedPolls": 3,
    "OverflowCount": 6,
    "OfficeHoursStart": "09:00",
    "OfficeHoursEnd": "17:00",
    "PreferenceOrder": [ "Junior", "Mid", "Senior", "Lead" ]
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "AllowedHosts": "*"
}